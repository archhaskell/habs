pkgname=haskell-dbus-core
pkgrel=1
pkgver=0.8.5.1
pkgdesc="Low-level D-Bus protocol implementation"
url="http://hackage.haskell.org/package/dbus-core"
license=('GPL-3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-binary' 'haskell-bytestring' 'haskell-containers' 'haskell-data-binary-ieee754' 'haskell-libxml-sax' 'haskell-network' 'haskell-parsec' 'haskell-text' 'haskell-unix' 'haskell-xml-types')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/dbus-core/0.8.5.1/dbus-core-0.8.5.1.tar.gz)
install=haskell-dbus-core.install
md5sums=('da7ccc846822cf86dfb37ff369b406b4')
build() {
    cd ${srcdir}/dbus-core-0.8.5.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/dbus-core
    runhaskell Setup copy --destdir=${pkgdir} || return 1
}

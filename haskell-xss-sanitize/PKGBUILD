pkgname=haskell-xss-sanitize
pkgrel=1
pkgver=0.2.1
pkgdesc="sanitize untrusted HTML to prevent XSS attacks"
url="http://hackage.haskell.org/package/xss-sanitize"
license=('custom:BSD3')
arch=('i686' 'x86_64')
makedepends=()
depends=('ghc' 'haskell-cabal' 'haskell-containers' 'haskell-network>=2' 'haskell-tagsoup>=0.11' 'haskell-utf8-string>=0.3')
options=('strip')
source=(http://hackage.haskell.org/packages/archive/xss-sanitize/0.2.1/xss-sanitize-0.2.1.tar.gz)
install=haskell-xss-sanitize.install
md5sums=('2d573339cca885a2314eb42f605be46c')
build() {
    cd ${srcdir}/xss-sanitize-0.2.1
    runhaskell Setup configure --prefix=/usr --docdir=/usr/share/doc/${pkgname} || return 1
    runhaskell Setup build                   || return 1
    runhaskell Setup haddock || return 1
    runhaskell Setup register   --gen-script || return 1
    runhaskell Setup unregister --gen-script || return 1
    install -D -m744 register.sh   ${pkgdir}/usr/share/haskell/$pkgname/register.sh
    install    -m744 unregister.sh ${pkgdir}/usr/share/haskell/$pkgname/unregister.sh
    install -d -m755 $pkgdir/usr/share/doc/ghc/html/libraries
    ln -s /usr/share/doc/${pkgname}/html ${pkgdir}/usr/share/doc/ghc/html/libraries/xss-sanitize
    runhaskell Setup copy --destdir=${pkgdir} || return 1
    install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/$pkgname/LICENSE || return 1
    rm -f ${pkgdir}/usr/share/doc/${pkgname}/LICENSE
}
